<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:id="@+id/layoutmain">


    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#171a1f"
        android:elevation="6dp"
        app:navigationIcon="@drawable/ic_arrow_left"
        app:title="Cadastro"
        app:contentInsetStartWithNavigation="5dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:fillViewport="true"
        android:background="#171a1f">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp">

                    <RelativeLayout
                        android:layout_width="145dp"
                        android:layout_height="145dp"
                        android:background="@drawable/oval_photo"
                        android:layout_below="@+id/scrollView"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_gravity="center_horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:scaleType="centerCrop"
                            android:id="@+id/cirleimageView"
                            android:layout_width="145dp"
                            android:layout_height="145dp"
                            android:visibility="gone"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true" />

                        <ImageView
                            android:paddingBottom="30dp"
                            android:paddingRight="25dp"
                            android:paddingLeft="23dp"
                            android:paddingTop="23dp"
                            android:id="@+id/imageView"
                            android:scaleType="fitCenter"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_camera"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal" />

                    </RelativeLayout>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:ems="10"
                        android:drawableLeft="@drawable/ic_nome"
                        android:drawablePadding="10dp"
                        android:textColorHint="#fff"
                        android:textSize="14sp"
                        android:id="@+id/nome"
                        android:layout_marginTop="10dp"
                        android:hint="Nome" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:drawableLeft="@drawable/ic_email"
                        android:drawablePadding="10dp"
                        android:textColorHint="#fff"
                        android:textSize="14sp"
                        android:id="@+id/email"
                        android:layout_marginTop="10dp"
                        android:hint="E-mail" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:drawableLeft="@drawable/ic_phone"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Telefone"
                        android:textColorHint="#fff"
                        android:textSize="14sp"
                        android:id="@+id/telefone"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_smartphone"
                        android:drawablePadding="10dp"
                        android:inputType="phone"
                        android:ems="10"
                        android:hint="Celular"
                        android:textColorHint="#fff"
                        android:textSize="14sp"
                        android:id="@+id/cel"
                        android:layout_marginTop="10dp" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:drawableLeft="@drawable/ic_lock"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:textColorHint="#fff"
                        android:textSize="14sp"
                        android:id="@+id/senha"
                        android:layout_marginTop="10dp"
                        android:hint="Senha" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:textColorHint="#fff"
                        android:textSize="14sp"
                        android:drawableLeft="@drawable/ic_lock"
                        android:drawablePadding="10dp"
                        android:id="@+id/confirmasenha"
                        android:layout_marginTop="10dp"
                        android:hint="Confirmar" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:text="CADASTRAR"
                            android:id="@+id/btnCadastro"
                            android:textColor="#fff"
                            android:background="@drawable/button_login"
                            android:elevation="3dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>