<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.luan.clubeprime.IngressoActivity"
    android:background="#171a1f">

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#000"
        android:elevation="6dp"
        app:navigationIcon="@drawable/ic_arrow_left"
        app:title="Ingresso Digital"
        app:contentInsetStartWithNavigation="5dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        android:id="@+id/view2"
        app:cardElevation="3dp"
        app:cardBackgroundColor="#252931"
        android:layout_margin="15dp"
        android:layout_below="@+id/toolbar">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="223dp"
                android:src="@drawable/ingresso"
                android:scaleType="centerCrop"
                android:id="@+id/foto" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="DIOGO NOGUEIRA"
            android:textSize="17sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:letterSpacing="0.3"
            android:id="@+id/title"
            android:layout_margin="20dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="3dp"
                    android:layout_height="55dp"
                    android:background="#ffffff"
                    android:id="@+id/linearLayout2"
                    android:layout_marginLeft="25dp"></LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView8"
                    android:src="@drawable/ic_calendar_mini"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/linearLayout2"
                    android:layout_toEndOf="@+id/linearLayout2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="12 DE NOVEMBRO"
                    android:id="@+id/data"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView8"
                    android:layout_toEndOf="@+id/imageView8" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView9"
                    android:src="@drawable/ic_pin"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@+id/imageView8"
                    android:layout_alignStart="@+id/imageView8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="TEATRO POSITIVO"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:id="@+id/local"
                    android:layout_below="@+id/imageView9"
                    android:layout_alignLeft="@+id/data"
                    android:layout_alignStart="@+id/data"
                    android:layout_marginTop="5dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView10"
                    android:src="@drawable/ic_clock"
                    android:layout_alignStart="@+id/imageView9"
                    android:layout_alignBottom="@+id/linearLayout2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="20:15h"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:id="@+id/hora"
                    android:layout_alignStart="@+id/local"
                    android:layout_alignEnd="@+id/local"
                    android:layout_alignBaseline="@+id/imageView10"
                    android:layout_alignTop="@+id/imageView10"
                    android:layout_marginTop="-4dp" />
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="312dp"
            android:layout_height="55dp"
            android:id="@+id/barcode"
            android:src="@drawable/bitmap_1"
            android:layout_gravity="center_horizontal|right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0 0000000 000000 00000 000 00"
            android:id="@+id/code"
            android:textSize="14sp"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp" />


    </LinearLayout>
</android.support.v7.widget.CardView>

</RelativeLayout>
