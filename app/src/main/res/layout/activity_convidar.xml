<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.luan.clubeprime.ConvidarActivity"
    android:background="#171a1f">


    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#000"
        android:elevation="6dp"
        app:logo="@drawable/minilogo_clubeprime"
        app:title="Convide um Amigo"
        app:contentInsetStartWithNavigation="5dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Você pode convidar um amigo para fazer parte deste clube também!"
        android:id="@+id/textView4"
        android:textSize="14sp"
        android:textColor="#fff"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/radius_box"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:id="@+id/email">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_email"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/imageView5"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="E-mail"
                android:id="@+id/textView3"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView5"
                android:layout_toEndOf="@+id/imageView5"
                android:layout_marginLeft="22dp"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginStart="22dp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_rigjt"
                android:id="@+id/imageView6"
                android:layout_alignTop="@+id/textView3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/radius_box"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:id="@+id/wpp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_whatsapp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/imageView11"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="WhatsApp"
                android:id="@+id/textView5"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView11"
                android:layout_toEndOf="@+id/imageView11"
                android:layout_marginLeft="22dp"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginStart="22dp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_rigjt"
                android:id="@+id/imageView12"
                android:layout_alignTop="@+id/textView5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/radius_box"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/face">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_facebook_off"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/imageView13"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Facebook - Messenger"
                android:id="@+id/textView6"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView13"
                android:layout_toEndOf="@+id/imageView13"
                android:layout_marginLeft="22dp"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginStart="22dp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_rigjt"
                android:id="@+id/imageView14"
                android:layout_alignTop="@+id/textView6"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
